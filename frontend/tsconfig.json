{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
